{
  "extends": ["config:base"],
  "lockFileMaintenance": { "enabled": true, "automerge": true },
  "prHourlyLimit": 2,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": ["node"],
      "groupName": "node"
    }
  ]
}
